<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto">
    <uascent.com.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        app:layout_heightPercent="13%w">

        <ImageView
            android:id="@+id/iv_back_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/arrow_icon_left"
            app:layout_heightPercent="8%w"
            app:layout_widthPercent="8%w"/>

        <TextView
            android:id="@+id/tv_back"
            style="@style/TextViewTag"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_back_icon"
            android:text="back"/>

        <TextView
            android:id="@+id/tv_title"
            style="@style/TextViewTitle"
            android:layout_centerInParent="true"
            android:text="title"/>
    </uascent.com.percent.support.PercentRelativeLayout>
</merge>