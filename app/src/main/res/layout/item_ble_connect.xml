<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_ble_name"
            style="@style/TextViewBlackNormal"
            android:layout_centerVertical="true"
            android:maxLength="10"
            android:maxLines="1"
            android:text="C3265K-4"
            android:textSize="@dimen/font_16sp" />

        <ImageView
            android:id="@+id/iv_ble_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/tv_ble_state"
            style="@style/TextViewBlackNormal"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_ble_icon"
            android:maxLines="1"
            android:text="Not Connected"
            android:textSize="@dimen/font_18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_ble_mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_ble_name"
        android:maxLines="1"
        android:text="C3265K-4"
        android:textSize="@dimen/font_14sp"
        android:visibility="gone" />

    <View style="@style/BlackLine" />
</LinearLayout>